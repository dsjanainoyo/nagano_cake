<h2>商品一覧</h2>


  <thead>
      <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
      </tr>
  </thead>
  
  <tbody>
    <%@items.each do |item|%>
    <tr>
        <td><%=item.id%></td>
        <td><%= link_to item.name,admin_items_path(item.id)%></td>
        <td><%=item.genre.name%></td>
    </tr>
    <%end%>
  </tbody>