<% if @item.errors.any?%>
  <ul>
    <%@item.errors.full_messages.each do |message|%>
      <li><%=message%></li>
    <%end%>
  </ul>
<%end%>

<h2>商品新規登録</h2>

<%= form_with model: @item, url: admin_items_path, local: true do |f| %>
  
  <h4>商品画像</h4>
    <%=f.file_field :image, placeholder: "ファイルを選択", accept: "image/*"%>
  
  <h4>商品名</h4>
    <%=f.text_field :name, placeholder: "商品名"%>
    
  <h4>商品説明</h4>
    <%=f.text_area :introduction, placeholder: "ここに説明文を記述します"%>
  
  <h4>ジャンル</h4>
  　<%=f.collection_select :genre_id, Genre.all,:id,:name%>
  
  <h4>税抜価格</h4>
    <%=f.text_field :price, placeholder: "1000"%>円
    
  <h4>販売ステータス</h4>
    <%=f.label :is_active,"販売中"%>
      <%=f.radio_button :is_active, :on_sale%>
    <%=f.label :is_active,"販売停止中"%>
      <%=f.radio_button :is_active, :discontinued%>
  
  <%=f.submit "新規登録"%>
  
<%end%>