<h2><%=@customer.last_name%><%=@customer.first_name%>さんの会員情報編集</h2>

  <%=form_with model: @customer, url: admin_customer_path, method: :patch do |f|%>
  
  <label for="customer_id">会員ID</label>
  <%=f.id%>
  
  <label for="customer_name">氏名</label>
  <%=f.text_field :last_name%><%=f.text_field :first_name%>
  
  <label_for="customer_name_kana">フリガナ</label_for>
  <%=f.text_field :last_name_kana%><%=f.text_field :first_name_kana%>
  
  <label for="customer_postal_code">郵便番号</label>
  <%=f.text_field :postal_code%>
  
  <label for="customer_address">住所</label>
  <%=f.text_field :address%>
  
  <labal for="customer_telephone_number">電話番号</labal>
  <%=f.text_field :telephon_number%>
  
  <label_for="customer_email">メールアドレス</label_for>
  <%=f.text_field :email%>
  
  <label_for="customer_status">会員ステータス</label_for>
  <%=f.label :is_active,"有効"%>
    <%=f.radio_button :is_active, :validity%>
  <%=f.label :is_active,"退会"%>
    <%=f.radio_button :is_active, :withdrawal%>
    
  <%=f.submit "変更を保存"%>